<% layout('/layouts/boilerplate.ejs') -%>

    <body>

        <div class="row">
            <div class="col-8 offset-2">
                <h1>Listing Details</h1>
            </div>
            <div class="card show_card col-6 offset-2 mt-3">
                <img src="<%= data[0].image %>" class="card-img-top show_img" alt="Loading...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= data[0].title %>
                    </h5>
                    <p class="card-text">
                        <%= data[0].description %> <br>
                        <b>Price:</b><%= data[0].price.toLocaleString("en-IN") %> <br>
                        <b>Location:</b><%= data[0].location %> <br>
                        <b>Country:</b><%= data[0].country %> <br>
                    </p>
                </div>
            </div>

        </div>
        <div class="btns">
            <form action="/listings/edit/<%= data[0]._id %>">
                <button class="btn btn-dark ">Edit</button>
            </form>
            <form action="/listings/<%= data[0]._id %>?_method=DELETE" method="post">
                <button id="delete_btn" class="btn btn-dark offset-10">Delete</button>
            </form>
        </div>
        <script>
            let delete_btn = document.querySelector("#delete_btn");
            delete_btn.addEventListener("click", (e) => {
                if (!confirm("Are You Sure Want To Delete")) {
                    e.preventDefault();
                }
            });
        </script>
    </body>